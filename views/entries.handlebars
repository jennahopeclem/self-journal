<div class="body-blog">
  <div class="row">
    <div class="leftcolumn">
      <div class="blog-header">
        <h3>{{todays_date}}</h3>
      </div>
      <div class="entry-container">
      {{#each entries as |entry|}}
      {{> entry-details}}
      
        <div class="comments-container">
        {{#each entry.comments as |comment|}}
          {{> comment-details }}
        {{/each}}
        </div>
      
      {{/each}}
      </div>
    </div>
    <div class="rightcolumn">
      <div class="card">
        <h3>Add New Entry:</h3>
        <a href="/entry" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">+</i></a>
      </div>
      <a href="/wellness">
      {{!-- //needs work!!!! --}}
        <div class="card section">
          <h3>Daily Goals:</h3>
          <ul>
            <li>{{goal.goal}}</li>
          </ul>
        </div>
      </a>
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>
<script src="/js/deleteEntries.js"></script>
