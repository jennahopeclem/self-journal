<div class="body-blog">
  <div class="blog-header">
    <h3>See our forum below</h3>
  </div>
  <div class="row">
    {{#each entry as |entry|}}
      <div class="row mb-4 project">
        <div class="col-md-5">
          <h2>
            <p>{{entry.name}}</p>
          </h2>
          <p>Created by:
            {{entry.user.first_name}}
            {{entry.user.last_name}}
            on
            {{format_date entry.date_created}}</p>
        </div>
        <div class="col-md-7">
          <p>
            {{entry.description}}
          </p>
        </div>
      </div>
    {{/each}}
    <div class="leftcolumn">
      <div class="card">
        <h2>{{entry.name}}</h2>
        <h5>{{entry.date_created}}</h5>
        <p>Created by: {{user.first_name}} {{user.last_name}}</p>
        <p>{{entry.text}}</p>
      </div>
    </div>
    <div class="rightcolumn">
      <div class="card">
        <h3>Add New Entry:</h3>
        <a
          href="/entries"
          class="btn-floating btn-large waves-effect waves-light red"
        ><i class="material-icons">+</i></a>
      </div>
      <a href="/wellness">
        <div class="card section scrollspy">
          <h3>Daily Goals:</h3>
          <ul>
            <li>{{goal.goal}}</li>
            <li></li>
            <li></li>
          </ul>
        </div>
      </a>
      <div class="card">
        <h3>Online Users:</h3>
        <p>{Names of other users who are active}</p>
      </div>
    </div>
  </div>
</div>

<script src="/js/entries.js"></script>
<script src="scroll.js"></script>