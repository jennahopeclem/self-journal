<div class="body-blog">
  <div class="blog-header">
      <h2>User Entries</h2>
  </div>
  
  
  <div class="row">
    <div class="leftcolumn">
      <div class="card">
        <h5>{{entry.date_created}}</h5>
          <div class="row">
            <form class="col s12">
              <div class="row">
                <div class="input-field col s6">
                  <input id="input_text" type="text" data-length="10">
                  <label for="input_text">Entry Title</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="textarea2" class="materialize-textarea" data-length="250"></textarea>
                  <label for="textarea2">Your entry goes here</label>
                </div>
              </div>
            </form>
          </div>
          <form action="#">
            <p>
              <label>
                <input type="checkbox" />
                <span>Keep my entry private</span>
              </label>
            </p>
            <p>
              <label>
                <input type="checkbox" />
                <span>Keep my entry public</span>
              </label>
            </p>
      </div>
    </div>
  </div>
</div>